<h2>Lista de Postagens: </h2>
<hr>
<a href="/admin/posts/add"><button class="btn btn-success mb-3">Nova Postagem</button></a>


{{#each posts}}
    <div class="card">
        <div class="card-body">
            <h4>{{title}}</h4>
            <p>{{description}}</p>
            <small>Criado em: {{#formatDate date}}{{/formatDate}}</small>
            <br>
            <small>categoria: {{category.name}}</small>
            <br>
            <a href="/admin/posts/edit/{{_id}}">
                <button class="btn btn-success mt-3"> Editar postagem</button>
            </a>
            <form action="/admin/posts/delete" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button class="btn btn-danger mt-2">Deletar postagem</button>
            </form>
        </div>
    </div>
{{else}}

{{/each}}