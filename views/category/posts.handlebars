{{#each posts}}
<div class="card">
        <div class="card-body">
            <h4>{{title}}</h4>
            <p>{{description}}</p>
            <a href="/posts/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
            <hr>
            <small>Criado em: {{#formatDate date}}{{/formatDate}}</small>
            <br>
            <small>categoria: {{category.name}}</small>
            <br>
        </div>
    </div>
{{else}}
    <h3>Não há postagens registradas</h3>
{{/each}}